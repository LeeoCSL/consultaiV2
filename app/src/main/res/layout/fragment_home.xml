<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fancy="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/img_logo"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="15dp"
            android:src="@drawable/logo_final"
            android:layout_centerHorizontal="true"/>


        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/img_logo"
            android:layout_margin="15dp"
            app:cardElevation="4dp">

            <RelativeLayout
                android:id="@+id/layoutMain"
                android:padding="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/txt_nome_bilhete"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:text="Bilhete teste"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/txt1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@+id/txt_nome_bilhete"
                    android:layout_marginTop="10dp"
                    android:text="Saldo atual:"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/txt_valor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@id/txt1"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@+id/txt1"
                    android:text="R$"
                    android:textColor="#000000"
                    android:textSize="25sp"
                    android:textStyle="bold" />



                <LinearLayout
                    android:id="@+id/layout_dias"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txt_valor"
                    android:layout_marginBottom="15dp"
                    android:layout_marginTop="10dp"
                    android:foregroundGravity="center"
                    android:gravity="center">

                    <mehdi.sakout.fancybuttons.FancyButton
                        android:id="@+id/selec_dom"
                        android:layout_width="22dp"
                        android:layout_height="38dp"
                        android:layout_weight="1"
                        android:elevation="4dp"
                        android:enabled="false"
                        fancy:fb_text="D"
                        fancy:fb_defaultColor="@color/colorPrimary"
                        fancy:fb_textColor="@color/white"
                        fancy:fb_radius="12dp"
                        fancy:fb_borderWidth="2dp"
                        fancy:fb_iconPaddingLeft="0dp"
                        fancy:fb_iconPaddingRight="0dp"
                        fancy:fb_disabledColor="@color/white"
                        fancy:fb_disabledTextColor="@color/cinza_escuro"
                        fancy:fb_disabledBorderColor="@color/colorPrimary"
                        fancy:fb_borderColor="@color/colorPrimary"/>

                    <mehdi.sakout.fancybuttons.FancyButton
                        android:id="@+id/selec_seg"
                        android:layout_width="26dp"
                        android:layout_height="36dp"
                        android:layout_marginLeft="4dp"
                        android:layout_weight="1"
                        android:elevation="4dp"
                        android:enabled="false"
                        fancy:fb_text="S"
                        fancy:fb_defaultColor="@color/colorPrimary"
                        fancy:fb_textColor="@color/white"
                        fancy:fb_radius="26dp"
                        fancy:fb_borderWidth="2dp"
                        fancy:fb_iconPaddingLeft="0dp"
                        fancy:fb_iconPaddingRight="0dp"
                        fancy:fb_disabledColor="@color/white"
                        fancy:fb_disabledTextColor="@color/cinza_escuro"
                        fancy:fb_disabledBorderColor="@color/colorPrimary"
                        fancy:fb_borderColor="@color/colorPrimary"/>


                    <mehdi.sakout.fancybuttons.FancyButton
                        android:id="@+id/selec_ter"
                        android:layout_width="26dp"
                        android:layout_height="36dp"
                        android:layout_weight="1"
                        android:elevation="4dp"
                        android:enabled="false"
                        android:layout_marginLeft="4dp"
                        fancy:fb_text="T"
                        fancy:fb_defaultColor="@color/colorPrimary"
                        fancy:fb_textColor="@color/white"
                        fancy:fb_radius="26dp"
                        fancy:fb_borderWidth="2dp"
                        fancy:fb_iconPaddingLeft="0dp"
                        fancy:fb_iconPaddingRight="0dp"
                        fancy:fb_disabledColor="@color/white"
                        fancy:fb_disabledTextColor="@color/cinza_escuro"
                        fancy:fb_disabledBorderColor="@color/colorPrimary"
                        fancy:fb_borderColor="@color/colorPrimary"/>

                    <mehdi.sakout.fancybuttons.FancyButton
                        android:id="@+id/selec_qua"
                        android:layout_width="26dp"
                        android:layout_height="36dp"
                        android:layout_weight="1"
                        android:elevation="4dp"
                        android:layout_marginLeft="4dp"
                        android:enabled="false"
                        fancy:fb_text="Q"
                        fancy:fb_defaultColor="@color/colorPrimary"
                        fancy:fb_textColor="@color/white"
                        fancy:fb_radius="26dp"
                        fancy:fb_borderWidth="2dp"
                        fancy:fb_iconPaddingLeft="0dp"
                        fancy:fb_iconPaddingRight="0dp"
                        fancy:fb_disabledColor="@color/white"
                        fancy:fb_disabledTextColor="@color/cinza_escuro"
                        fancy:fb_disabledBorderColor="@color/colorPrimary"
                        fancy:fb_borderColor="@color/colorPrimary" />

                    <mehdi.sakout.fancybuttons.FancyButton
                        android:id="@+id/selec_qui"
                        android:layout_width="26dp"
                        android:layout_height="36dp"
                        android:layout_weight="1"
                        android:layout_marginLeft="4dp"
                        android:elevation="4dp"
                        android:enabled="false"
                        fancy:fb_text="Q"
                        fancy:fb_defaultColor="@color/colorPrimary"
                        fancy:fb_textColor="@color/white"
                        fancy:fb_radius="26dp"
                        fancy:fb_borderWidth="2dp"
                        fancy:fb_iconPaddingLeft="0dp"
                        fancy:fb_iconPaddingRight="0dp"
                        fancy:fb_disabledColor="@color/white"
                        fancy:fb_disabledTextColor="@color/cinza_escuro"
                        fancy:fb_disabledBorderColor="@color/colorPrimary"
                        fancy:fb_borderColor="@color/colorPrimary"/>

                    <mehdi.sakout.fancybuttons.FancyButton
                        android:id="@+id/selec_sex"
                        android:layout_width="26dp"
                        android:layout_height="36dp"
                        android:layout_weight="1"
                        android:layout_marginLeft="4dp"
                        android:elevation="4dp"
                        android:enabled="false"
                        fancy:fb_text="S"
                        fancy:fb_defaultColor="@color/colorPrimary"
                        fancy:fb_textColor="@color/white"
                        fancy:fb_radius="26dp"
                        fancy:fb_borderWidth="2dp"
                        fancy:fb_iconPaddingLeft="0dp"
                        fancy:fb_iconPaddingRight="0dp"
                        fancy:fb_disabledColor="@color/white"
                        fancy:fb_disabledTextColor="@color/cinza_escuro"
                        fancy:fb_disabledBorderColor="@color/colorPrimary"
                        fancy:fb_borderColor="@color/colorPrimary"/>

                    <mehdi.sakout.fancybuttons.FancyButton
                        android:id="@+id/selec_sab"
                        android:layout_width="26dp"
                        android:layout_height="36dp"
                        android:layout_weight="1"
                        android:elevation="4dp"
                        android:layout_marginLeft="4dp"
                        android:enabled="false"
                        fancy:fb_text="S"
                        fancy:fb_defaultColor="@color/colorPrimary"
                        fancy:fb_textColor="@color/white"
                        fancy:fb_radius="26dp"
                        fancy:fb_borderWidth="2dp"
                        fancy:fb_iconPaddingLeft="0dp"
                        fancy:fb_iconPaddingRight="0dp"
                        fancy:fb_disabledColor="@color/white"
                        fancy:fb_disabledTextColor="@color/cinza_escuro"
                        fancy:fb_disabledBorderColor="@color/colorPrimary"
                        fancy:fb_borderColor="@color/colorPrimary" />

                </LinearLayout>


                <info.hoang8f.widget.FButton
                    android:id="@+id/btn_recarga"
                    android:layout_below="@+id/layout_dias"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:onClick="handlerToMainActivity"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp"
                    android:text="Recarreguei meu bilhete"
                    android:textColor="#FFFFFF"
                    app:cornerRadius="36dp"
                    app:fButtonColor="@color/colorPrimary"
                    app:shadowColor="@android:color/darker_gray"
                    app:shadowEnabled="true" />

                <LinearLayout
                    android:id="@+id/ll"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_below="@+id/btn_recarga"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="20dp"
                    android:gravity="center">

                    <info.hoang8f.widget.FButton
                        android:id="@+id/btnExcluir"
                        android:layout_width="80dp"
                        android:layout_height="33dp"
                        android:layout_below="@+id/layoutHrs"
                        android:layout_marginRight="5dp"
                        android:layout_toLeftOf="@+id/btn_editar"
                        android:text="Excluir"
                        app:cornerRadius="36dp"
                        app:fButtonColor="@color/white"
                        app:shadowColor="@android:color/darker_gray"
                        app:shadowEnabled="true" />


                    <info.hoang8f.widget.FButton
                        android:id="@+id/btn_editar"
                        android:layout_width="80dp"
                        android:layout_height="33dp"
                        android:layout_below="@+id/layoutHrs"
                        android:layout_marginRight="5dp"
                        android:layout_toLeftOf="@+id/btn_editar"
                        android:text="Editar"
                        android:textColor="@color/white"
                        app:cornerRadius="36dp"
                        app:fButtonColor="@color/colorPrimary"
                        app:shadowColor="@android:color/darker_gray"
                        app:shadowEnabled="true" />
                </LinearLayout>

                <android.support.design.widget.FloatingActionButton
                    android:id="@+id/fab"
                    android:layout_below="@+id/ll"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="12dp"
                    android:layout_marginBottom="8dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:elevation="6dp"
                    android:tint="@color/white"
                    app:srcCompat="@drawable/ic_add_black_24dp"
                    app:pressedTranslationZ="12dp" />
            </RelativeLayout>
        </android.support.v7.widget.CardView>

        <TextView
            android:id="@+id/txtVlr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="invisible"/>
    </RelativeLayout>
</FrameLayout>
