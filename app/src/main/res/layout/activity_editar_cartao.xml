<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:fancy="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_above="@+id/lay_btn">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:src="@drawable/logo_final" />

        <LinearLayout
            android:id="@+id/layout_dias"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tp_1"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:foregroundGravity="center"
            android:gravity="center"
            android:padding="10dp">

            <me.rishabhkhanna.customtogglebutton.CustomToggleButton
                android:id="@+id/btn_domingo"
                android:layout_width="20dp"
                android:layout_height="44dp"
                android:layout_weight="1"
                android:elevation="4dp"
                android:textOff="D"
                android:textOn="D"
                app:borderWidth="2dp"
                app:checkedColor="@color/colorPrimary"
                app:checkedTextColor="@android:color/white"
                app:radius="12dp"
                app:uncheckedColor="@color/colorPrimary"
                app:uncheckedTextColor="@color/colorPrimary" />

            <me.rishabhkhanna.customtogglebutton.CustomToggleButton
                android:id="@+id/btn_segunda"
                android:layout_width="20dp"
                android:layout_height="44dp"
                android:layout_marginLeft="4dp"
                android:layout_weight="1"
                android:elevation="4dp"
                android:textOff="S"
                android:textOn="S"
                app:borderWidth="2dp"
                app:checkedColor="@color/colorPrimary"
                app:checkedTextColor="@android:color/white"
                app:radius="12dp"
                app:uncheckedColor="@color/colorPrimary"
                app:uncheckedTextColor="@color/colorPrimary" />

            <me.rishabhkhanna.customtogglebutton.CustomToggleButton
                android:id="@+id/btn_terca"
                android:layout_width="20dp"
                android:layout_height="44dp"
                android:layout_marginLeft="4dp"
                android:layout_weight="1"
                android:elevation="4dp"
                android:textOff="T"
                android:textOn="T"
                app:borderWidth="2dp"
                app:checkedColor="@color/colorPrimary"
                app:checkedTextColor="@android:color/white"
                app:radius="12dp"
                app:uncheckedColor="@color/colorPrimary"
                app:uncheckedTextColor="@color/colorPrimary" />

            <me.rishabhkhanna.customtogglebutton.CustomToggleButton
                android:id="@+id/btn_quarta"
                android:layout_width="20dp"
                android:layout_height="44dp"
                android:layout_marginLeft="4dp"
                android:layout_weight="1"
                android:elevation="4dp"
                android:textOff="Q"
                android:textOn="Q"
                app:borderWidth="2dp"
                app:checkedColor="@color/colorPrimary"
                app:checkedTextColor="@android:color/white"
                app:radius="12dp"
                app:uncheckedColor="@color/colorPrimary"
                app:uncheckedTextColor="@color/colorPrimary" />

            <me.rishabhkhanna.customtogglebutton.CustomToggleButton
                android:id="@+id/btn_quinta"
                android:layout_width="20dp"
                android:layout_height="44dp"
                android:layout_marginLeft="4dp"
                android:layout_weight="1"
                android:elevation="4dp"
                android:textOff="Q"
                android:textOn="Q"
                app:borderWidth="2dp"
                app:checkedColor="@color/colorPrimary"
                app:checkedTextColor="@android:color/white"
                app:radius="12dp"
                app:uncheckedColor="@color/colorPrimary"
                app:uncheckedTextColor="@color/colorPrimary" />

            <me.rishabhkhanna.customtogglebutton.CustomToggleButton
                android:id="@+id/btn_sexta"
                android:layout_width="20dp"
                android:layout_height="44dp"
                android:layout_marginLeft="4dp"
                android:layout_weight="1"
                android:elevation="4dp"
                android:textOff="S"
                android:textOn="S"
                app:borderWidth="2dp"
                app:checkedColor="@color/colorPrimary"
                app:checkedTextColor="@android:color/white"
                app:radius="12dp"
                app:uncheckedColor="@color/colorPrimary"
                app:uncheckedTextColor="@color/colorPrimary" />

            <me.rishabhkhanna.customtogglebutton.CustomToggleButton
                android:id="@+id/btn_sabado"
                android:layout_width="20dp"
                android:layout_height="44dp"
                android:layout_marginLeft="4dp"
                android:layout_weight="1"
                android:elevation="4dp"
                android:textOff="S"
                android:textOn="S"
                app:borderWidth="2dp"
                app:checkedColor="@color/colorPrimary"
                app:checkedTextColor="@android:color/white"
                app:radius="12dp"
                app:uncheckedColor="@color/colorPrimary"
                app:uncheckedTextColor="@color/colorPrimary" />
        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    app:cardElevation="4dp">

                    <RelativeLayout
                        android:id="@+id/ida"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/txt_ida"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="10dp"
                            android:text="IDA"
                            android:textStyle="bold" />

                        <LinearLayout
                            android:id="@+id/ll_center"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:layout_centerHorizontal="true"
                            android:layout_below="@+id/txt_ida"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:id="@+id/tp_1"
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:layout_margin="10dp"
                                android:visibility="visible"
                                android:onClick="handlerSetTimeRoutineIda"
                                app:srcCompat="@drawable/relogio" />

                            <TextView
                                android:text="10h25min"
                                android:textSize="24sp"
                                android:visibility="visible"
                                android:layout_below="@+id/txt_ida"
                                android:layout_above="@+id/layout_uso"
                                android:layout_centerHorizontal="true"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                        </LinearLayout>


<!--                        <TextView
                            android:id="@+id/hora_selecionada_1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/txt_ida"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:layout_margin="10dp" />-->

                        <RelativeLayout
                            android:id="@+id/layout_uso"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/ll_center"
                            android:layout_marginBottom="20dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:padding="10dp">

                            <TextView
                                android:id="@+id/txt_uso"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerHorizontal="true"
                                android:text="Como vai ser o uso na ida?"
                                android:textSize="16sp"
                                android:textStyle="bold" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:layout_below="@+id/txt_uso">

                                <RadioGroup
                                    android:id="@+id/rgroup_ida"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">

                                    <RadioButton
                                        android:id="@+id/rb_onibus_trilho_ida"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginRight="10dp"
                                        android:layout_marginTop="5dp"
                                        android:text="Ônibus ou Trilho" />

                                    <View
                                        android:id="@+id/view3"
                                        android:layout_width="2dp"
                                        android:layout_height="match_parent"
                                        android:layout_marginLeft="10dp"
                                        android:layout_marginRight="10dp"
                                        android:layout_marginTop="5dp"
                                        android:background="#cccccc" />


                                    <RadioButton
                                        android:id="@+id/rb_integracao_ida"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="10dp"
                                        android:layout_marginRight="10dp"
                                        android:layout_marginTop="5dp"
                                        android:text="Integração" />


                                </RadioGroup>
                            </LinearLayout>
                        </RelativeLayout>
                    </RelativeLayout>
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:elevation="4dp">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/txt_volta"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="10dp"
                            android:layout_centerHorizontal="true"
                            android:text="VOLTA"
                            android:textStyle="bold" />

                        <ImageView
                            android:id="@+id/tp_2"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:onClick="handlerSetTimeRoutineVolta"
                            android:layout_below="@+id/txt_volta"
                            android:layout_centerHorizontal="true"
                            android:layout_margin="10dp"
                            app:srcCompat="@drawable/relogio" />

                        <TextView
                            android:id="@+id/hora_selecionada_2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_below="@+id/txt_volta"
                            android:layout_margin="10dp"
                            android:layout_centerHorizontal="true"
                            />

                        <RelativeLayout
                            android:id="@+id/layout_uso2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/tp_2"
                            android:layout_marginBottom="20dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:padding="10dp">

                            <TextView
                                android:id="@+id/txt_uso2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerHorizontal="true"
                                android:text="Como vai ser o uso na volta?"
                                android:textSize="16sp"
                                android:textStyle="bold" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:layout_below="@+id/txt_uso2">

                                <RadioGroup
                                    android:id="@+id/rgroup_volta"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">

                                    <RadioButton
                                        android:id="@+id/rb_onibus_trilho_volta"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginRight="10dp"
                                        android:layout_marginTop="5dp"
                                        android:text="Ônibus ou Trilho" />

                                    <View
                                        android:id="@+id/view2"
                                        android:layout_width="2dp"
                                        android:layout_height="match_parent"
                                        android:layout_marginLeft="10dp"
                                        android:layout_marginRight="10dp"
                                        android:layout_marginTop="5dp"
                                        android:background="#cccccc" />


                                    <RadioButton
                                        android:id="@+id/rb_integracao_volta"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="10dp"
                                        android:layout_marginRight="10dp"
                                        android:layout_marginTop="5dp"
                                        android:text="Integração" />

                                </RadioGroup>
                            </LinearLayout>
                        </RelativeLayout>
                    </RelativeLayout>
                </android.support.v7.widget.CardView>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/lay_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_margin="10dp">

        <info.hoang8f.widget.FButton
            android:id="@+id/btn_cancelar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:layout_below="@+id/layoutHrs"
            android:layout_toLeftOf="@+id/btn_editar"
            android:text="Cancelar"
            android:onClick="handlerBackToMainActivity"
            app:cornerRadius="36dp"
            app:fButtonColor="@color/white"
            app:shadowColor="@android:color/darker_gray"
            app:shadowEnabled="true" />

        <info.hoang8f.widget.FButton
            android:layout_below="@+id/layout_dias"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:layout_centerHorizontal="true"
            android:onClick="handlerNewRoutine"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:text="Salvar"
            android:textColor="#FFFFFF"
            app:cornerRadius="36dp"
            app:fButtonColor="@color/colorPrimary"
            app:shadowColor="@android:color/darker_gray"
            app:shadowEnabled="true" />
    </LinearLayout>
</RelativeLayout>
