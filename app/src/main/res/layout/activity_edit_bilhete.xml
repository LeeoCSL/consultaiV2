<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="br.com.consultai.activities.EditBilheteActivity">

    <ImageView
        android:id="@+id/logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/logo_final"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        />

    <TextView
        android:id="@+id/txt1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Editar informações do bilhete"
        android:layout_below="@+id/logo"
        android:textSize="22sp"
        android:layout_marginTop="20dp"
        android:textStyle="bold"
        android:textColor="#787878"
        android:layout_centerHorizontal="true"
        />

    <android.support.design.widget.TextInputEditText
        android:id="@+id/edt_apelido"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Apelido"
        android:layout_below="@id/txt1"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"

        />

    <android.support.design.widget.TextInputEditText
        android:id="@+id/edt_numero"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nascimento"
        android:layout_below="@id/edt_apelido"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        />

    <CheckBox
        android:id="@+id/checkEstudante"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="Estudante"
        android:layout_below="@+id/edt_numero"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"/>

    <TextView
        android:id="@+id/txt2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Saldo Atual:"
        android:layout_below="@+id/checkEstudante"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:textSize="16sp"
        />
    
    <TextView
        android:id="@+id/txtSaldo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" 
        android:layout_toRightOf="@+id/txt2"
        android:textSize="18sp"
        android:layout_below="@+id/checkEstudante"
        android:text="R$ 00,00"
        android:layout_marginTop="15dp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_marginLeft="5dp"
        />
    
    <info.hoang8f.widget.FButton
        android:id="@+id/btn_limpar"
        android:layout_width="125dp"
        android:layout_height="wrap_content"
        android:text="Limpar"
        android:layout_below="@+id/checkEstudante"
   android:layout_marginRight="20dp"
        android:layout_alignParentEnd="true"
        android:textColor="#000000"
        app:fButtonColor="#FFFFFF"
        android:shadowColor="@android:color/black"
        app:shadowEnabled="true"
        app:cornerRadius="28dp"
        />
    <info.hoang8f.widget.FButton
        android:id="@+id/btn_voltar"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:text="Voltar"
        android:layout_toLeftOf="@+id/v1"
        android:layout_alignParentBottom="true"
        android:textColor="#FFFFFF"
        app:fButtonColor="@color/colorPrimary"
        android:shadowColor="@android:color/black"
        app:shadowEnabled="true"
        app:cornerRadius="28dp"
        android:layout_marginBottom="20dp"
        />

    <View
        android:id="@+id/v1"
        android:layout_width="1dp"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:layout_margin="20dp"/>

    <info.hoang8f.widget.FButton
        android:id="@+id/btn_continuar"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:text="Salvar"
        android:layout_toRightOf="@+id/v1"
        android:layout_alignParentBottom="true"
        android:textColor="#FFFFFF"
        app:fButtonColor="@color/colorPrimary"
        android:shadowColor="@android:color/black"
        app:shadowEnabled="true"
        app:cornerRadius="28dp"
        android:layout_marginBottom="20dp"/>

</RelativeLayout>
